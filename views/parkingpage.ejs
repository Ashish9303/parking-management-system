<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header.ejs')%>
    <section id="parking">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center">Parking Entry</h2>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No.</th>
                            <th>Vechile Number</th>
                            <th>Vechile Type</th>
                            <th>Vechile InTime</th>
                            <th>Vechile OutTime</th>
                            <th>Amount Charged</th>
                            <th>Vechile Status</th>
                            <th>Print</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.vno%></td>
                                <td><%=result.vtype%></td>
                                <td><%=result.vintime%></td>
                                <td><%=result.vouttime%></td>
                                <td><%=result.vamount%></td>
                                <%if(result.status=='In'){%>
                                <td><a href="/parkingupdaterecord/<%=result.id%>"><button><%=result.status%></button></a></td>
                                <%}else{%>
                                <td><a href="/parkingupdaterecord/<%=result.id%>"><button disabled><%=result.status%></button></a></td>
                                <%}%>
                                <%if(result.status=='In'){%>
                                <td><a href="/print/<%=result.id%>"><button disabled>Print</button></a></td>
                                <%}else{%>
                                <td><a href="/print/<%=result.id%>"><button >Print</button></a></td>
                                <%}%>
                            </tr>

                       <% })%>
                      
                    </table>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>